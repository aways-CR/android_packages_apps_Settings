<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="general_options"
        android:title="@string/profiles_general_title">

        <Preference
            android:key="custom_carrier_label"
            android:title="@string/custom_carrier_label_title" />
            

        <Preference
            android:key="transparency_dialog"
            android:title="@string/transparency_dialog_title" />

        <PreferenceScreen
            android:key="recents_ram_bar"
            android:fragment="com.android.settings.carbon.RamBar"
            android:title="@string/ram_bar" />

        <Preference
            android:key="lcd_density_setup"
            android:title="@string/lcd_density_title"
            android:summary="@string/lcd_density_summary" />
            

        <PreferenceScreen
            android:key="battery_light"
            android:title="@string/battery_light_title"
            android:fragment="com.android.settings.notificationlight.BatteryLightSettings" />


        <PreferenceScreen
            android:key="notification_pulse"
            android:title="@string/notification_pulse_title"
            android:fragment="com.android.settings.notificationlight.NotificationLightSettings" />

        <CheckBoxPreference
            android:key="wakeup_when_plugged_unplugged"
            android:title="@string/wakeup_when_plugged_unplugged_title"
            android:summary="@string/wakeup_when_plugged_unplugged_summary"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="system_power_crt_screen_off"
            android:summary="@string/system_power_crt_screen_off_summary"
            android:title="@string/system_power_crt_screen_off_title" />

        <CheckBoxPreference
            android:key="system_power_crt_screen_on"
            android:summary="@string/system_power_crt_screen_on_summary"
            android:title="@string/system_power_crt_screen_on_title" />
        <CheckBoxPreference
            android:key="dual_pane"
            android:title="@string/dual_pane"
            android:summary="@string/dual_pane_summary" />

        <CheckBoxPreference
            android:key="notification_show_wifi_ssid"
            android:title="@string/notification_show_wifi_ssid_title"
            android:summary="@string/notification_show_wifi_ssid_summary"
            android:defaultValue="false" />




    
    
    </PreferenceCategory>    
  
  <!-- moved powermenu from settings header -->  
    <PreferenceCategory
            android:title="@string/power_menu">
        <PreferenceScreen
            android:key="power"
            android:title="@string/power_menu"
            android:fragment="com.android.settings.carbon.PowerMenu" >
        </PreferenceScreen>
    </PreferenceCategory>
  <!-- moved powermenu from settings header -->  


    <PreferenceCategory
        android:key="xposed_options"
        android:title="@string/xposed_category_title" >

	<PreferenceScreen
	    android:key="xposed_warning"
            android:title="@string/xposed_warning_title"
	    android:summary="@string/xposed_warning_summary" >
	</PreferenceScreen>

	<PreferenceScreen
	    android:key="xposed_framework_modules"
            android:title="@string/xposed_framework_modules_title"
	    android:summary="@string/xposed_framework_modules_summary" >
	    <intent android:action="android.intent.action.MAIN"
                android:targetPackage="de.robv.android.xposed.installer"
		android:targetClass="de.robv.android.xposed.installer.XposedInstallerActivity" />
	</PreferenceScreen>

	<PreferenceScreen
	    android:key="xposed_per_app_settings"
            android:title="@string/xposed_per_app_title"
	    android:summary="@string/xposed_per_app_summary" >
	    <intent android:action="android.intent.action.MAIN"
                android:targetPackage="de.robv.android.xposed.mods.appsettings"
		android:targetClass="de.robv.android.xposed.mods.appsettings.XposedModActivity" />
	</PreferenceScreen>

	<PreferenceScreen
	    android:key="xposed_netflix_workaround"
            android:title="@string/xposed_netflix_title"
	    android:summary="@string/xposed_netflix_summary" >
	</PreferenceScreen>

    </PreferenceCategory>


</PreferenceScreen>
